const seo = {
  title: "The Power Of Now by Eckhart Tolle (REVIEW)",
  description:
    "This is the best self-improvement books list. Learn strategies you can use to reach your goals with this post.",
};
---

<Schema
  item={{
    "@context": "https://schema.org/",
    "@type": "Product",
    name: "The Power Of Now by Eckhart Tolle",
    description:
      "'The Power of Now' is a transformative guide that teaches mindfulness and the art of living in the present moment for a more fulfilling life.",
    review: {
      "@type": "Review",
      reviewRating: {
        "@type": "Rating",
        ratingValue: 4.9,
        bestRating: 5,
      },
      author: [
        {
