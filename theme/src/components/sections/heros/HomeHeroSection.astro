---
import { Icon } from "astro-icon";
import { Button, Container } from "@littlesticks/odyssey-theme-components";
import ProductCard from "../products/productCard/productCard.astro";
---

<Container>
  <section class="hero-section__section">
    <div class="hero-section__text">
      <h1 class="text-3xl sm:text-5xl">40 Best Self Improvement Books 2023</h1>
      <p class="!mt-6">
        My team has read over 40 self-improvement books, collecting extensive
        data for your benefit. In this article, you will discover the pros and
        cons of each book, a notable quote from each, and an Amazon review. This
        will help you determine which book is of the greatest interest to you.
      </p>
    </div>
    <div class="w-full max-w-lg mx-auto">
      <ProductCard href="https://amzn.to/46gLH00">
        <a href="https://amzn.to/46gLH00" target="_blank" rel="nofollow"
          ><img
            width="165"
            height="250"
            src="https://ws-na.amazon-adsystem.com/widgets/q?_encoding=UTF8&ASIN=B09TMWJY1K&Format=_SL250_&ID=AsinImage&MarketPlace=US&ServiceVersion=20070822&WS=1&tag=selfimprovi09-20&language=en_US"
            alt="The Power Of Discipline by Daniel Walter"
          /></a
        >
      </ProductCard>
    </div>
  </section>
</Container>

<style>
  .hero-section__section {
    text-align: left;
    margin: var(--section-margin) auto;
    min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 1rem;
  }
  .hero-section__text {
    justify-self: center;
    max-width: 25rem;
  }
  .hero-btns__container {
    gap: 1rem;
  }
  .hero-btns__container {
    margin-right: 1rem;
  }
  .hero-section__image {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .hero-section__image img {
    width: 100%;
    height: 100%;
    max-height: 80vh;
    object-fit: cover;
    border-radius: var(--theme-shape-radius);
  }
  @media (max-width: 1024px) {
    .hero-section__section {
      margin: 5rem auto;
      grid-template-columns: 1fr;
    }
    .hero-section__text {
      max-width: 544px;
    }
  }
</style>
