---
import { Icon } from "astro-icon";
import { Button, Container } from "@littlesticks/odyssey-theme-components";
---

<Container>
  <section class="hero-section__section">
    <div class="hero-section__text">
      <h1 class="text-3xl  sm:text-5xl">Self Improvement Books Online Store</h1>
      <p class="mt-2">
        Embrace Your Journey to Personal Growth. Explore a handpicked selection
        of self-improvement books that hold the keys to your transformation
      </p>
      <div class="hero-btns__container">
        <Button href="#" customIcon>
          Get Your Frst Book
          <Fragment slot="icon">
            <Icon name="ic:baseline-chevron-right" />
          </Fragment>
        </Button>
      </div>
    </div>
    <div class="hero-section__image">
      <picture>
        <img
          src="/assets/images/home/classic-hero.jpg"
          alt="Astro Odyssey"
          id="home-hero-image"
        />
      </picture>
    </div>
  </section>
</Container>

<style>
  .hero-section__section {
    text-align: left;
    margin: var(--section-margin) auto;
    min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 1rem;
  }
  .hero-section__text {
    justify-self: center;
    max-width: 25rem;
  }
  .hero-btns__container {
    gap: 1rem;
  }
  .hero-btns__container {
    margin-right: 1rem;
  }
  .hero-section__image {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .hero-section__image img {
    width: 100%;
    height: 100%;
    max-height: 80vh;
    object-fit: cover;
    border-radius: var(--theme-shape-radius);
  }
  @media (max-width: 1024px) {
    .hero-section__section {
      margin: 5rem auto;
      grid-template-columns: 1fr;
    }
    .hero-section__text {
      max-width: 544px;
    }
  }
</style>
