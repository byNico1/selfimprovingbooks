---
import Icon from "astro-icon";
import Button from "../../../Button/button.astro";
import TextSection from "../../../textSection/TextSection.astro";
import ProductCard from "../../products/productCard/productCard.astro";
import ProductContainer from "../../products/productsContainer/productsContainer.astro";
---

<div
  id="best-books-for-athletes"
  class="sm:w-11/12 max-w-2xl sm:mx-auto mt-10 rounded-lg"
>
  <h2 class="leading-7">Top 5 Best Books For Athletes:</h2>
  <ol class="items-left underline">
    <li class="mb-2">
      <a class="cursor-pointer" href="#peak-performance">Peak Performance</a>
    </li>
    <li class="mb-2">
      <a class="cursor-pointer" href="#champions-mind"
        >The Champion's Mind: How Great Athletes Think, Train, and Thrive</a
      >
    </li>
    <li class="mb-2">
      <a class="cursor-pointer" href="#mind-gym"
        >Mind Gym: An Athlete's Guide to Inner Excellence</a
      >
    </li>
    <li class="mb-2">
      <a class="cursor-pointer" href="#endure"
        >Endure: Mind, Body, and the Curiously Elastic Limits of Human
        Performance</a
      >
    </li>
    <li class="mb-2">
      <a class="cursor-pointer" href="#relentless"
        >Relentless: From Good to Great to Unstoppable</a
      >
    </li>
  </ol>
</div>

